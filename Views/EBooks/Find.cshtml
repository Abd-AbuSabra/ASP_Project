@model ASP_Project.Models.ViewModels.FindBook

<h1>Find Book</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Find">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookPrice" class="control-label">Price</label>
                <input asp-for="BookPrice" class="form-control" />
                <span asp-validation-for="BookPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Find" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="@Model.EBooks.FirstOrDefault()!.Title"></label>
            </th>
            <th>
                <label asp-for="@Model.EBooks.FirstOrDefault()!.BookPrice"></label>
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EBooks)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.BookPrice.ToString("c")
                </td>
               
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EBookId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EBookId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EBookId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
